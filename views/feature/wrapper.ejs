                <p>xx시 xx분 남음</p>
                <h4>5교시 수업</h4>
            </div>
            -->
        </div>
        
        <div class="mt-auto w-100 dragfalse d-flex">
            <div class="mx-auto">
                <p class="h7 text-muted cursor d-inline-block" onclick="alert('test')">만든이들</p><br/>
                <p class="d-inline-block">2021 아름인 / Areumin Team</p>
            </div>
        </div>

    </div>
    <div id="floating" onclick="func()"><img id="menuicon" src="/src/img/icon/menu.png" alt="" class="img-fluid h-100 p-2"></div>
    <div id="curtain" onclick="func()"></div>
    <div id="content">
        <div class="boxsize mx-auto">
            <%- include(linkto) %>
        </div>
    </div>
    
    <script>
        function nextversion(){ alert('아직 업데이트되지 않았습니다'); }
    
        function func(){
            var query = matchMedia("screen and (min-width: 1200px)");
            var check = document.getElementById('sidebar');
    
            if(window.getComputedStyle(check).left == '-300px'){
                document.getElementById('sidebar').style.left = "0px";
                
                if(query.matches) { document.getElementById('curtain').style.display = "none"; document.getElementById('content').style.paddingLeft = "300px"; }
                else              { document.getElementById('curtain').style.display = "block"; }
            }
            if(window.getComputedStyle(check).left == '0px'){
                document.getElementById('sidebar').style.left = "-300px";
                document.getElementById('curtain').style.display = "none";
                document.getElementById('content').style.paddingLeft = "0px";
            }
        }

        function hrefto(){
            location.href = "/main";
        }
    </script>
